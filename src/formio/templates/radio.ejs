<div class="{{ctx.ofPrefix}}form-choices">
  {% ctx.values.forEach(function(item) { %}
    <div class="{{ctx.ofPrefix}}form-choices__choice utrecht-form-field utrecht-form-field--radio">
        <div class="{{ctx.ofPrefix}}checkbox">
              <{{ctx.input.type}}
                ref="input"

                {% for (var attr in ctx.input.attr) { %}
                  {{attr}}="{{ctx.input.attr[attr]}}"
                {% } %}

                value="{{item.value}}"

                {% if (ctx.value && (ctx.value === item.value || (typeof ctx.value === 'object' && ctx.value.hasOwnProperty(item.value) && ctx.value[item.value]))) { %}
                  checked=true
                {% } %}

                {% if (item.disabled) { %}
                  disabled=true
                {% } %}

                id="{{ctx.id}}{{ctx.row}}-{{item.value}}"
              >
                {{ctx.input.content}}
            </{{ctx.input.type}}>

            <div class="{{ctx.ofPrefix}}checkbox__checkmark"></div>

            {% if (!ctx.component.optionsLabelPosition || ctx.component.optionsLabelPosition === 'right' || ctx.component.optionsLabelPosition === 'bottom') { %}
                <label class="{{ctx.ofPrefix}}checkbox__label utrecht-form-label utrecht-form-label--radio {% if (item.disabled) { %}utrecht-form-label--disabled{% } %}" for="{{ctx.id}}{{ctx.row}}-{{item.value}}">{{ctx.t(item.label)}}</label>
            {% } %}
        </div>
    </div>
      {% }) %}
</div>
